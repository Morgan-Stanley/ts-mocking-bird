{
    "name": "@morgan-stanley/ts-mocking-bird",
    "version": "1.0.0",
    "description": "A fully type safe mocking, call verification and import replacement library for jasmine and jest",
    "main": "./dist/main/index.js",
    "types": "./dist/main/index.d.ts",
    "scripts": {
        "clean": "rimraf dist reports ../build ../install ../packages docs",
        "build": "tsc",
        "postbuild": "npm run copy",
        "copy": "copyfiles main/**/*.html main/**/*.css main/**/*.jpg dist",
        "prebuild-release": "npm install && npm run clean && npm run verify-release",
        "verify-release": "concurrently npm:lint npm:test npm:build",
        "build-release": "npm run copy-dist",
        "watch-build": "tsc --watch",
        "test": "karma start --singleRun --browsers ChromeHeadlessNoSandbox",
        "lint": "tslint -c tslint.conf.js -p tsconfig.json",
        "watch-test": "karma start --no-coverage",
        "copy-dist": "concurrently --kill-others-on-fail npm:copy-dist-*",
        "copy-dist-lint": "copyfiles tslint/**/* dist",
        "watch-test-coverage": "karma start",
        "prepublishOnly": "npm run build-release"
    },
    "devDependencies": {
        "@types/jasmine": "^3.3.0",
        "@types/jest": "^24.9.0",
        "@types/node": "^10.17.13",
        "ajv": "^6.10.2",
        "chromedriver": "^79.0.0",
        "circular-dependency-plugin": "^5.2.0",
        "concurrently": "^4.1.0",
        "copyfiles": "^1.2.0",
        "istanbul-instrumenter-loader": "^3.0.1",
        "jasmine": "^3.3.0",
        "jasmine-core": "^3.3.0",
        "karma": "^3.1.4",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.2",
        "karma-coverage-istanbul-reporter": "^1.3.0",
        "karma-jasmine": "^2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "karma-junit-reporter": "^1.2.0",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^4.0.2",
        "prettier": "^1.19.1",
        "puppeteer": "^2.0.0",
        "rimraf": "^2.6.3",
        "source-map": "0.5.7",
        "ts-loader": "^5.4.5",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typedoc": "^0.14.2",
        "typedoc-plugin-sourcefile-url": "^1.0.4",
        "typescript": "~3.1.6",
        "webpack": "^4.39.2"
    },
    "license": "ISC",
    "dependencies": {
        "@types/uuid": "^3.4.4",
        "chalk": "^2.4.2",
        "lodash": "^4.17.15",
        "tsutils": "^3.17.1",
        "uuid": "^3.4.0"
    }
}
